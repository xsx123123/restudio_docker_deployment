services:
  rstudio:
    container_name: {{ container_name }}
    image: {{ image_name }}
    build:
      context: .
      dockerfile: dockerfile
    ports:
      - "{{ port }}:8787"
    environment:
      PASSWORD: {{ password }}
      USERID: {{ userid }}
      GROUPID: {{ groupid }}
      HOME: {{ home_dir }}
    volumes:
      {%- for volume in volumes %}
      - {{ volume }}
      {%- endfor %}